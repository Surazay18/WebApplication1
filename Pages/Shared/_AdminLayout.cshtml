<!-- Pages/Shared/_AdminLayout.cshtml -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .sidebar {
            min-height: 100vh;
            background: #343a40;
            color: white;
            transition: all 0.3s;
        }

            .sidebar .nav-link {
                color: rgba(255, 255, 255, 0.8);
                padding: 0.75rem 1rem;
                margin-bottom: 0.2rem;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    color: white;
                    background: rgba(255, 255, 255, 0.1);
                }

                .sidebar .nav-link i {
                    margin-right: 0.5rem;
                }

        .sidebar-header {
            padding: 1.5rem 1rem;
            font-weight: bold;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .content {
            padding: 2rem;
        }

        @@media (max-width: 768px) {
            .sidebar {
                min-width: 80px;
                max-width: 80px;
                text-align: center;
            }

                .sidebar .nav-link span {
                    display: none;
                }

                .sidebar .nav-link i {
                    margin-right: 0;
                    font-size: 1.2rem;
                }

            .sidebar-header span {
                display: none;
            }

            .sidebar-header i {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar d-flex flex-column flex-shrink-0 p-0" style="width: 280px;">
            <div class="sidebar-header">
                <i class="bi bi-shield-lock"></i>
                <span>Admin Panel</span>
            </div>
            <ul class="nav nav-pills flex-column mb-auto px-2">
                <li class="nav-item">
                    <a class="nav-link @AdminNavPages.Index1NavClass(ViewContext)" asp-page="/Admin">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a class="nav-link @AdminNavPages.UsersNavClass(ViewContext)" asp-page="/Admin/Users">
                        <i class="bi bi-people"></i>
                        <span>User Management</span>
                    </a>
                </li>
                <li>
                    <a class="nav-link @AdminNavPages.SettingsNavClass(ViewContext)" asp-page="/Admin/Settings">
                        <i class="bi bi-gear"></i>
                        <span>System Settings</span>
                    </a>
                </li>
                <li>
                    <a class="nav-link @AdminNavPages.QuestionnairesNavClass(ViewContext)" asp-page="/Admin/Questionnaire">
                        <i class="bi bi-graph-up"></i>
                        <span>Configurations</span>
                    </a>
                </li>
            </ul>
            <div class="mt-auto p-3 border-top">
                <a href="/" class="nav-link">
                    <i class="bi bi-house-door"></i>
                    <span>Back to Site</span>
                </a>
            </div>
        </div>

        <!-- Main content -->
        <div class="content flex-grow-1">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>